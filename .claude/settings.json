{
    "env": {
      "BASH_MAX_OUTPUT_LENGTH": "100000",
      "BASH_DEFAULT_TIMEOUT_MS": "2000000"
    },
    "includeCoAuthoredBy": false,
    "permissions": {
      "allow": [
        "WebFetch(domain:creator.poe.com)",
        "WebFetch(domain:github.com)",
        "WebFetch(domain:modal.com)",
        "WebFetch(domain:docs.anthropic.com)",
        "WebFetch(domain:docs.pytorch.org)",
        "WebFetch(domain:docs.vllm.ai)",
        "Bash(echo $POE_API_KEY)",
        "Bash(./start_server.sh)",
        "mcp__puppeteer__puppeteer_navigate",
        "mcp__puppeteer__puppeteer_screenshot",
        "mcp__puppeteer__puppeteer_click",
        "mcp__puppeteer__puppeteer_fill",
        "mcp__puppeteer__puppeteer_evaluate",
        "mcp__puppeteer__puppeteer_select",
        "mcp__puppeteer__puppeteer_hover"
      ],
      "deny": [
      ]
    },
    "enableAllProjectMcpServers": true,
    "enabledMcpjsonServers": [
      "puppeteer"
    ],
    "hooks": {
      "Notification": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "say requesting permissions &"
            }
          ]
        }
      ],
      "Stop": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "say operation complete &"
            }
          ]
        }
      ],
      "PostToolUse": [
        {
          "matcher": "Edit|MultiEdit|Write",
          "hooks": [
            {
              "type": "command",
              "command": "jq -r '.tool_input.file_path' | { read file_path; if [ \"$(basename \"$file_path\")\" = \"index.html\" ]; then cat CLAUDE.md; fi; }"
            }
          ]
        }
      ]
    }
}